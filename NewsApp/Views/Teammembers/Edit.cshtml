@model NewsApp.Models.Teammembers

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    

    <h4 class="mt-3"> Edit @Model.Name Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-8"style="margin:auto">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label  mb-3 mt-3"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobTitle" class="control-label  mb-3 mt-3"></label>
                    <input asp-for="JobTitle" class="form-control" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label  mb-3 mt-3"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="TeameImage" class="control-label  mb-3 mt-3"></label>
                    <input asp-for="TeameImage" class="form-control" accept="image/*" />
                    <span asp-validation-for="TeameImage" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index"class="btn btn-primary">Back to List</a>
    </div>


</div>