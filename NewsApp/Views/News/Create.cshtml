@model NewsApp.Models.News

@{
    ViewData["Title"] = "Create";
}

<div class="container">

    <h4 class="mt-3"> Create News</h4>
    <hr />
    <div class="row">
        <div class="col-md-8"style="margin:auto">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label mb-3 mt-3"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label mb-3 mt-3"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label mb-3 mt-3"></label>
                    <input asp-for="ImageFile"  class="form-control" accept="image/*"/>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Topic" class="control-label mb-3 mt-3"></label>
                    <textarea asp-for="Topic"class="form-control"></textarea>
                    @*<input asp-for="Topic" class="form-control" />*@
                    <span asp-validation-for="Topic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label mb-3 mt-3">Category</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                <div class="form-group  mt-4">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>


</div>